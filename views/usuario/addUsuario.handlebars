<div class="text-start mt-3 p-3">
    <h3>Cadastro de Usuários</h3>

    <form action="/usuario/store" method="post">
        <section class="mb-2">
            {{!--Campo 1: Nome--}}
            <div class="col-md-2">
                <label for="nome">Nome:</label>
                <input type="text" name="nome" id="nome" class="form-control">
            </div>
        </section>
        
        {{!--Campo 2: Salário e cargo--}}
        <section class="mb-2">
            <div class="col-md-2">
                <label for="email">Email:</label>
                <input type="email" name="email" id="email" class="form-control">
            </div>
        </section>

        {{!--Campo 3: Botão de cadastrar--}}
        <section class="mb-2 d-flex justify-content-start">
            <button href="/tarefa/create" class="btn btn-primary" type="submit">Cadastrar</button>
        </section>
    </form>
</div>